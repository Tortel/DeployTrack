<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/widget_pick" />

    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:padding="2dip"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="?attr/buttonTextColor"
        app:selectedColor="?attr/buttonTextColor"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="?attr/divideHorizontal"
        android:paddingBottom="5dip" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_color"
        style="?android:attr/listSeparatorTextViewStyle" />

       <RadioGroup
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <RadioButton
              android:id="@+id/widget_light_text"
              android:checked="true"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@string/light"
              android:onClick="onClick" />

           <RadioButton
              android:id="@+id/widget_dark_text"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@string/dark"
              android:onClick="onClick" />

       </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="?attr/divideHorizontal"
        android:paddingBottom="5dip" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >

       <Button
           android:id="@+id/button_cancel"
           style="@style/no_border"
           android:textColor="?attr/buttonTextColor"
           android:layout_width="0dip"
           android:layout_height="wrap_content"
           android:layout_weight="0.45"
           android:onClick="onClick"
           android:text="@string/cancel" />

       <View
           android:layout_width="2dip"
           android:layout_height="match_parent"
           android:background="?attr/divideVertical" />

       <Button
           android:id="@+id/button_save"
           style="@style/no_border"
           android:textColor="?attr/buttonTextColor"
           android:layout_width="0dip"
           android:layout_height="wrap_content"
           android:layout_weight="0.45"
           android:onClick="onClick"
           android:text="@string/save" />

   </LinearLayout>

</LinearLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="@string/name"/>
        
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:inputType="text|textAutoComplete|textAutoCorrect|textCapSentences"
            />
       
        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="?attr/divideHorizontal" />
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
    
            <Button
                android:id="@+id/button_start"
                style="@style/no_border"
                android:textColor="?attr/buttonTextColor"
                android:layout_width="0dip"
                android:layout_height="75dip"
                android:layout_weight="0.45"
                android:onClick="onClick"
                android:text="@string/start_date" />
    
            <View
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="?attr/divideVertical" />
    
            <Button
                android:id="@+id/button_end"
                style="@style/no_border"
                android:textColor="?attr/buttonTextColor"
                android:layout_width="0dip"
                android:layout_height="75dip"
                android:layout_weight="0.45"
                android:onClick="onClick"
                android:text="@string/end_date" />
        </LinearLayout>
    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="2dip"
	        android:background="?attr/divideHorizontal"
	        android:paddingBottom="5dip" />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
		
	        <LinearLayout
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            android:gravity="center"
	            >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/color_completed" />
			        
			    <com.larswerkman.holocolorpicker.ColorPicker
				    android:id="@+id/picker_completed"
				    android:layout_width="match_parent"
				    android:layout_height="200dip"
				    android:gravity="center" />
			    
			    <com.larswerkman.holocolorpicker.SVBar
		            android:id="@+id/sv_completed"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
					android:paddingLeft="5dip"
		            android:paddingRight="5dip"/>
			    
			</LinearLayout>
		    
	        <LinearLayout
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            android:gravity="center"
	            >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/color_remaining" />
			        
			    <com.larswerkman.holocolorpicker.ColorPicker
				    android:id="@+id/picker_remain"
				    android:layout_width="match_parent"
				    android:layout_height="200dip"
				    android:gravity="center" />
			    
			    <com.larswerkman.holocolorpicker.SVBar
		            android:id="@+id/sv_remain"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="5dip"
		            android:paddingRight="5dip" />
			    
		    </LinearLayout>
	    </LinearLayout>
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="2dip"
	        android:background="?attr/divideHorizontal"
	        android:paddingBottom="5dip" />
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
    
            <Button
                android:id="@+id/button_cancel"
                style="@style/no_border"
                android:textColor="?attr/buttonTextColor"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:onClick="onClick"
                android:text="@string/cancel" />

            <View
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="?attr/divideVertical" />
    
            <Button
                android:id="@+id/button_save"
                style="@style/no_border"
                android:textColor="?attr/buttonTextColor"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:onClick="onClick"
                android:text="@string/save" />
        </LinearLayout>
        
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="2dip"
	        android:background="?attr/divideHorizontal"
	        android:paddingBottom="5dip" />
    
    </LinearLayout>
</ScrollView>

<data-extraction-rules>
    <cloud-backup>
        <!-- Only backup our databases and sharedprefs -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="com.tortel.deploytrack_preferences.xml" />
    </cloud-backup>
    <device-transfer>
        <!-- Only backup our databases and sharedprefs -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="com.tortel.deploytrack_preferences.xml" />
    </device-transfer>
</data-extraction-rules>

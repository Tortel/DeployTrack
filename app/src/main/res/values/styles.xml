<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark theme -->
    <style name="Theme.DeployThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_variant</item>
        <item name="android:statusBarColor">@color/primary_dark</item>

        <item name="colorOnPrimary">@android:color/primary_text_dark</item>

        <!-- Date picker theme info -->
        <item name="mdtp_theme_dark">true</item>

        <!-- Use the 'legacy' text input' -->
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>

    <!-- Light theme -->
    <style name="Theme.DeployThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_variant</item>
        <item name="android:statusBarColor">@color/primary_dark</item>

        <item name="colorOnPrimary">@android:color/primary_text_dark</item>

        <!-- Date picker theme info -->
        <item name="mdtp_theme_dark">false</item>

        <!-- Use the 'legacy' text input' -->
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>
    
    <!-- Style for the percentage -->
    <style name="BasePercentage">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Date picker button fix. https://github.com/wdullaer/MaterialDateTimePicker/issues/523#issuecomment-477349333 -->
    <style name="mdtp_ActionButton.Text" parent="Widget.MaterialComponents.Button.TextButton.Dialog"/>

</resources>
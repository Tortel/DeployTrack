<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark theme -->
    <style name="Theme.DeployThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Theme specific stuff -->
        <item name="tabIndicatorColor">@color/primary_dark</item>
    </style>

    <style name="Theme.DeployThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Theme specific stuff -->
        <item name="tabIndicatorColor">@color/primary_light</item>
    </style>
    
    <!-- Style for the percentage -->
    <style name="BasePercentage">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dip</item>
    </style>
</resources>
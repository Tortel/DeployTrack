<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tortel.deploytrack"
    android:versionCode="5"
    android:versionName="1.0.4" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DeployTheme" >
        
        <!-- Main activity -->
        <activity
            android:name="com.tortel.deploytrack.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Widget config activity -->
        <activity android:name="com.tortel.deploytrack.WidgetPickerActivity">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
		    </intent-filter>
        </activity>
        
        <!-- Create/edit activity -->
        <activity android:name="com.tortel.deploytrack.CreateActivity" />
        
        <!-- Notification service -->
        <service android:name="com.tortel.deploytrack.service.NotificationService" />
        
        <!-- Widget receiver -->
        <receiver
            android:name="com.tortel.deploytrack.provider.WidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>
        
    </application>

</manifest>
